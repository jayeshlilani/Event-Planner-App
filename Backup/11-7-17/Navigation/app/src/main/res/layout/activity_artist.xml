<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_artist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="smokinguns.navigation.artist">
    <TextView
        android:id="@+id/tvhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="Artist"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/border_shape"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chairs (Plastic)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chairs (Wooden wtih cushion)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chairs (Special)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Table (Plastic)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Table (Wooden)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sofa"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sofa (Special)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Halogen (Yellow-1000W)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Halogen (White-1000W)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Dimmer and Fader/Power - â‚¹500"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Fans"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Stage (1.5ft)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Stage (2.5ft)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Stage (4ft)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Backdrop + sidefills (10ft)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Masking for projector screen (12' x 9')"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Carpet on Stage"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Main Gate Frame"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Ramp (T-shape)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Green Room (furnished)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Stalls (furnished)"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mobile Washrooms"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Barricades"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Inflates and Maniquins"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Staircase"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/c26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Drapping (as per order)"
                android:textSize="15dp"/>

        </LinearLayout>

    </ScrollView>
    <Button
        android:text="Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:padding="5dp"
        android:fadingEdge="vertical|horizontal"
        android:textSize="20dp"
        android:backgroundTint="#ef5350"
        android:background="@drawable/border_shape"
        android:textAllCaps="false"
        android:id="@+id/btn"
        />
</RelativeLayout>
