<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="smokinguns.etc.contact">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@id/tvhead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:paddingLeft="3dp"
                android:text="Get in Touch"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvhead"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_input_layout_name"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Phone"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_layout_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_input_layout_phone"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Subject"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_layout_msg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/login_input_layout_subject"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:height="180dp"
                    android:hint="Message"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_input_layout_msg"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_shape"
                android:backgroundTint="@color/btn_book"
                android:fadingEdge="vertical|horizontal"
                android:padding="5dp"
                android:text="Book"
                android:textAllCaps="false"
                android:textColor="@color/btn_text"
                android:textSize="20dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
