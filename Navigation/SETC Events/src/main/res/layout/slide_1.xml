<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Event type"
        android:fontFamily="cursive"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@color/intro_text"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tvhead" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:layout_below="@id/tvhead"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <ImageView android:layout_height="350dp"
            android:layout_width="150dp"
            android:src="@drawable/ss1"
            android:layout_weight="1"/>

        <ImageView android:layout_height="350dp"
            android:layout_width="150dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/tvhead"
            android:src="@drawable/ss2"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>